<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <View
        android:id="@+id/ContainerAlteracaoCliente"
        android:layout_width="match_parent"
        android:layout_height="625dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/container_cadastro_cliente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.566" />

    <TextView
        android:id="@+id/txtAlteracaoCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alteracaoCliente"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/ContainerAlteracaoCliente"
        app:layout_constraintStart_toStartOf="@id/ContainerAlteracaoCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerAlteracaoCliente"
        android:layout_marginTop="33dp"
        />


    <TextView
        android:id="@+id/txtDescAlteracaoCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe os novos dados desejados"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtAlteracaoCliente"
        app:layout_constraintStart_toStartOf="@id/ContainerAlteracaoCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerAlteracaoCliente"
        android:layout_marginTop="10dp"
        />


    <EditText
        android:id="@+id/editCpfAlteracaoCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cpf"
        android:textColor="@color/black"
        android:background="@drawable/container_campos_dados"
        app:layout_constraintTop_toBottomOf="@id/txtDescAlteracaoCliente"
        app:layout_constraintStart_toStartOf="@id/ContainerAlteracaoCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerAlteracaoCliente"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="23dp"
        android:padding="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/editNomeAlteracaoCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:textColor="@color/black"
        android:background="@drawable/container_campos_dados"
        app:layout_constraintTop_toBottomOf="@id/editCpfAlteracaoCliente"
        app:layout_constraintStart_toStartOf="@id/ContainerAlteracaoCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerAlteracaoCliente"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="23dp"
        android:padding="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/editTelefoneAlteracaoCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefone"
        android:textColor="@color/black"
        android:background="@drawable/container_campos_dados"
        app:layout_constraintTop_toBottomOf="@id/editNomeAlteracaoCliente"
        app:layout_constraintStart_toStartOf="@id/ContainerAlteracaoCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerAlteracaoCliente"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="23dp"
        android:padding="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/editEnderecoAlteracaoCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EndereÃ§o"
        android:textColor="@color/black"
        android:background="@drawable/container_campos_dados"
        app:layout_constraintTop_toBottomOf="@id/editTelefoneAlteracaoCliente"
        app:layout_constraintStart_toStartOf="@id/ContainerAlteracaoCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerAlteracaoCliente"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="23dp"
        android:padding="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/editInstagramAlteracaoCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Instagram"
        android:textColor="@color/black"
        android:background="@drawable/container_campos_dados"
        app:layout_constraintTop_toBottomOf="@id/editEnderecoAlteracaoCliente"
        app:layout_constraintStart_toStartOf="@id/ContainerAlteracaoCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerAlteracaoCliente"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="23dp"
        android:padding="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="@color/black"
        />

    <Button
        android:id="@+id/botaoAlterarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="@color/blue"
        android:padding="15dp"
        android:text="@string/Alterar"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@id/ContainerAlteracaoCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerAlteracaoCliente"
        app:layout_constraintStart_toStartOf="@id/ContainerAlteracaoCliente"
        app:layout_constraintTop_toTopOf="@id/editInstagramAlteracaoCliente"
        app:layout_constraintVertical_bias="0.844" />

    <TextView
        android:id="@+id/botaoVoltarAlteracaoCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>