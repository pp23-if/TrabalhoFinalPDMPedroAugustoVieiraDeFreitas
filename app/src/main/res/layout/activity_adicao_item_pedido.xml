<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <View
        android:id="@+id/ContainerAdicaoItemPedido"
        android:layout_width="match_parent"
        android:layout_height="625dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/container_cadastro_cliente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.566" />

    <TextView
        android:id="@+id/txtAdicaoItemPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adicaoItemPedido"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/ContainerAdicaoItemPedido"
        app:layout_constraintStart_toStartOf="@id/ContainerAdicaoItemPedido"
        app:layout_constraintEnd_toEndOf="@id/ContainerAdicaoItemPedido"
        android:layout_marginTop="33dp"
        />


    <TextView
        android:id="@+id/txtCorpoAdicaoItemPedido"
        android:layout_width="329dp"
        android:layout_height="288dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ContainerAdicaoItemPedido"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="@id/ContainerAdicaoItemPedido"
        app:layout_constraintTop_toBottomOf="@id/txtAdicaoItemPedido" />

    <EditText
        android:id="@+id/editQuantidadeItemPedido"
        android:layout_width="173dp"
        android:layout_height="61dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/container_campos_dados"
        android:hint="@string/Quantidade"
        android:inputType="text"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="@id/ContainerAdicaoItemPedido"
        app:layout_constraintStart_toStartOf="@id/ContainerAdicaoItemPedido"
        app:layout_constraintTop_toBottomOf="@id/txtCorpoAdicaoItemPedido" />

    <Button
        android:id="@+id/botaoExcluirProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="@color/blue"
        android:padding="15dp"
        android:text="@string/Adicionar"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@id/ContainerAdicaoItemPedido"
        app:layout_constraintEnd_toEndOf="@id/ContainerAdicaoItemPedido"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@id/ContainerAdicaoItemPedido"
        app:layout_constraintTop_toTopOf="@id/editQuantidadeItemPedido"
        app:layout_constraintVertical_bias="0.605" />

    <TextView
        android:id="@+id/botaoVoltarAdicaoItemPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>