<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <View
        android:id="@+id/ContainerSelecaoPedidoAlteracao"
        android:layout_width="386dp"
        android:layout_height="723dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/container_cadastro_cliente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSelecaoPedidoAlteracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selecionePedidoAlteracao"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/ContainerSelecaoPedidoAlteracao"
        app:layout_constraintStart_toStartOf="@id/ContainerSelecaoPedidoAlteracao"
        app:layout_constraintEnd_toEndOf="@id/ContainerSelecaoPedidoAlteracao"
        android:layout_marginTop="33dp"
        />


    <TextView
        android:id="@+id/txtDescSelecaoPedidoAlteracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selecaoPedidoAlteracao"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/txtSelecaoPedidoAlteracao"
        app:layout_constraintStart_toStartOf="@id/ContainerSelecaoPedidoAlteracao"
        app:layout_constraintEnd_toEndOf="@id/ContainerSelecaoPedidoAlteracao"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/botaoVoltarSelecaoPedidoAlteracao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/listViewSelecaoPedidoAlteracao"
        android:layout_width="367dp"
        android:layout_height="604dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/ContainerSelecaoPedidoAlteracao"
        app:layout_constraintStart_toStartOf="@id/ContainerSelecaoPedidoAlteracao"
        app:layout_constraintTop_toBottomOf="@id/txtDescSelecaoPedidoAlteracao" />


</androidx.constraintlayout.widget.ConstraintLayout>