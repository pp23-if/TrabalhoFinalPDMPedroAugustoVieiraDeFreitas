<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow">

    <View
        android:id="@+id/ContainerCadastroCliente"
        android:layout_width="match_parent"
        android:layout_height="625dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/container_cadastro_cliente"
        />

    <TextView
        android:id="@+id/txtTitleCadastroCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CadastroCliente"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/ContainerCadastroCliente"
        app:layout_constraintStart_toStartOf="@id/ContainerCadastroCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerCadastroCliente"
        android:layout_marginTop="33dp"
        />


    <TextView
        android:id="@+id/txtDescCadastroCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informe os dados pedidos abaixo"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtTitleCadastroCliente"
        app:layout_constraintStart_toStartOf="@id/ContainerCadastroCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerCadastroCliente"
        android:layout_marginTop="10dp"
        />


    <EditText
        android:id="@+id/editCpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cpf"
        android:textColor="@color/black"
        android:background="@drawable/container_campos_dados"
        app:layout_constraintTop_toBottomOf="@id/txtDescCadastroCliente"
        app:layout_constraintStart_toStartOf="@id/ContainerCadastroCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerCadastroCliente"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="23dp"
        android:padding="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/editNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome"
        android:textColor="@color/black"
        android:background="@drawable/container_campos_dados"
        app:layout_constraintTop_toBottomOf="@id/editCpf"
        app:layout_constraintStart_toStartOf="@id/ContainerCadastroCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerCadastroCliente"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="23dp"
        android:padding="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/editTelefone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Telefone"
        android:textColor="@color/black"
        android:background="@drawable/container_campos_dados"
        app:layout_constraintTop_toBottomOf="@id/editNome"
        app:layout_constraintStart_toStartOf="@id/ContainerCadastroCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerCadastroCliente"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="23dp"
        android:padding="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/editEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EndereÃ§o"
        android:textColor="@color/black"
        android:background="@drawable/container_campos_dados"
        app:layout_constraintTop_toBottomOf="@id/editTelefone"
        app:layout_constraintStart_toStartOf="@id/ContainerCadastroCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerCadastroCliente"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="23dp"
        android:padding="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="@color/black"
        />

    <EditText
        android:id="@+id/editInstagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Instagram"
        android:textColor="@color/black"
        android:background="@drawable/container_campos_dados"
        app:layout_constraintTop_toBottomOf="@id/editEndereco"
        app:layout_constraintStart_toStartOf="@id/ContainerCadastroCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerCadastroCliente"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="23dp"
        android:padding="15dp"
        android:inputType="text"
        android:maxLines="1"
        android:textColorHint="@color/black"
        />

    <Button
        android:id="@+id/botaoCadastrarCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="@color/blue"
        android:padding="15dp"
        android:text="@string/cadastrar"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="@id/ContainerCadastroCliente"
        app:layout_constraintEnd_toEndOf="@id/ContainerCadastroCliente"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/ContainerCadastroCliente"
        app:layout_constraintTop_toTopOf="@id/editInstagram"
        app:layout_constraintVertical_bias="0.917" />

    <TextView
        android:id="@+id/botaoVoltarCadastroCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>